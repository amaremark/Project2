<div class="card">
  <div class="card-content">
    <a class="card-title" href="/tasks/{{id}}">
      {{ content }}
    </a>
  </div>
  <div class="card-action">
    <a href="/tasks/{{ author.id }}" class="">{{ author.local.email }}</a>
    <span class="tasks__date">{{ createdAt }}</span>
    <span class="task_comments">{{ comments.length }} Comments</span>
    <form class="" action="/tasks/{{id}}?_method=DELETE" method="POST">
      <button type="submit" name="button">Delete</button>
    </form>
  </div>
</div>