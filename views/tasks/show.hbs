<section class="form-container">
  <h3>New Recipe</h3>
  <form action="/recipe" method="POST" class="recipe-form">
    <div class="input-field">
      <textarea name="recipe[content]" cols="30" rows="10" placeholder="Recipes"></textarea>
    </div>
    <div class="">
      <select name="author" id="author">
        {{!-- <option value="" disabled selected>Choose the User</option> --}}
        {{#each users}}
          <option value="{{id}}">{{local.email}}</option>
        {{/each}}
      </select>
    </div>
    <div class="input-field">
      <input type="submit" value="Recipe" class="btn">
    </div>
  </form>
</section>